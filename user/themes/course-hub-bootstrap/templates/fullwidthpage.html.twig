{# new twig template file - hibbittsdesign.org #}
{% embed 'partials/base.html.twig' %}

  {% block content %}
    <div class="container">
      <div class="row">
        <div class="col-sm-12 blog-main">
          {% if not page.header.hidepagetitle %}
          <h3>{{page.title}}</h3>
          {% endif %}
          {{ page.content }}
          {# GitHub link - hibbittsdesign.org #}
          {% if config.site.github.location == 'page' and (not page.header.hidegithublink) %}
            <hr>
            <br>
            {% include 'partials/github_page_link.html.twig' %}
            <br>
          {% endif %}
        </div>
        {# removed sidebar rendering - hibbittsdesign.org #}
      </div>
    </div>
  {% endblock %}

{% endembed %}
