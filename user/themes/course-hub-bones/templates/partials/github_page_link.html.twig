{% if page.header.githublink %}
  {% set githubURL = page.header.githublink %}
{% else %}
  {% set githubURL = config.site.github.tree ~  ('/'~page.filePathClean)|replace({'/user/':''}) %}
{% endif %}
<span style="color: #888888;">
  <p>Have a suggestion or correction?
    <a class="newwindow" href="{{ githubURL }}" title="Edit this page on GitHub">
      {% if config.site.github.icon %}
        <i class="fa fa-{{ config.site.github.icon }}" aria-hidden="true"></i>
      {% endif %}
      Edit this Page</a>
  </p>
</span>
